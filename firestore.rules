rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);
      // Users can update their own data, but NOT their role (security)
      allow update: if isOwner(userId) && 
                     (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      // Users can create their own profile
      allow create: if isOwner(userId);
      // Admins can read and update all user data (including roles)
      allow read, update: if isAdmin();
    }

    // Donations collection
    match /donations/{donationId} {
      // Users can read their own donations
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      // Allow creates from authenticated users OR anyone with valid donation data
      // This allows both authenticated users and guest donations
      // Note: createdAt and id are added automatically, so we don't require them in validation
      allow create: if isAuthenticated() || 
                     (request.resource.data.keys().hasAll(['userId', 'amount', 'currency', 'status', 'stripePaymentIntentId']) &&
                      request.resource.data.userId is string &&
                      request.resource.data.amount is number &&
                      request.resource.data.currency is string &&
                      request.resource.data.status is string &&
                      request.resource.data.stripePaymentIntentId is string &&
                      request.resource.data.stripePaymentIntentId.size() > 0 &&
                      request.resource.data.amount > 0);
      // Admins can read all donations
      allow read: if isAdmin();
    }

    // Purchases collection
    match /purchases/{purchaseId} {
      // Admins can read all purchases (both get and list operations)
      allow read: if isAdmin();
      // Users can read their own purchases
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      // Allow creates from authenticated users OR anyone with valid purchase data
      // This allows both authenticated users and guest purchases
      // Note: createdAt and id are added automatically, so we don't require them in validation
      allow create: if isAuthenticated() || 
                     (request.resource.data.keys().hasAll(['userId', 'productId', 'productName', 'amount', 'currency', 'status', 'stripePaymentIntentId']) &&
                      request.resource.data.userId is string &&
                      request.resource.data.productId is string &&
                      request.resource.data.productName is string &&
                      request.resource.data.amount is number &&
                      request.resource.data.currency is string &&
                      request.resource.data.status is string &&
                      request.resource.data.stripePaymentIntentId is string &&
                      request.resource.data.stripePaymentIntentId.size() > 0 &&
                      request.resource.data.amount > 0);
      // Admins can update purchase status, shipment status, and tracking number
      allow update: if isAdmin() &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'shipmentStatus', 'trackingNumber', 'updatedAt']);
    }

    // Memberships collection
    match /memberships/{membershipId} {
      // Users can read their own memberships
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      // Allow creates from authenticated users OR from webhooks (with valid data structure)
      // Webhooks don't have auth, so we validate the data structure instead
      allow create: if isAuthenticated() || 
                     (request.resource.data.keys().hasAll(['userId', 'tier', 'status', 'stripeSubscriptionId', 'startDate']) &&
                      request.resource.data.userId is string &&
                      request.resource.data.tier is string &&
                      request.resource.data.status is string &&
                      request.resource.data.stripeSubscriptionId is string &&
                      request.resource.data.stripeSubscriptionId.size() > 0);
      // Admins can read all memberships
      allow read: if isAdmin();
    }

    // Contacts collection
    match /contacts/{contactId} {
      // Anyone can create contact submissions (authenticated or not)
      // Validate that required fields exist and are non-empty strings
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'message']) &&
                     request.resource.data.name is string &&
                     request.resource.data.email is string &&
                     request.resource.data.message is string &&
                     request.resource.data.name.size() > 0 &&
                     request.resource.data.email.size() > 0 &&
                     request.resource.data.message.size() > 0;
      // Only admins can read contact submissions
      allow read: if isAdmin();
    }

    // Products collection
    match /products/{productId} {
      // Everyone can read active products (authenticated or not)
      allow read: if resource.data.isActive == true;
      // Admins can read all products (active and inactive)
      allow read: if isAdmin();
      // Only admins can create, update, or delete products
      allow create: if isAdmin() &&
                     request.resource.data.keys().hasAll(['name', 'description', 'price', 'image', 'stock', 'lowStockThreshold', 'isActive']) &&
                     request.resource.data.name is string &&
                     request.resource.data.description is string &&
                     request.resource.data.price is number &&
                     request.resource.data.image is string &&
                     request.resource.data.stock is number &&
                     request.resource.data.lowStockThreshold is number &&
                     request.resource.data.isActive is bool &&
                     request.resource.data.price > 0 &&
                     request.resource.data.stock >= 0;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // News collection
    match /news/{newsId} {
      // Everyone can read published news
      allow read: if resource.data.isPublished == true;
      // Admins can read all news (published and unpublished)
      allow read: if isAdmin();
      // Only admins can create, update, or delete news
      allow create: if isAdmin() &&
                     request.resource.data.keys().hasAll(['title', 'description', 'isPublished']) &&
                     request.resource.data.title is string &&
                     request.resource.data.description is string &&
                     request.resource.data.isPublished is bool &&
                     request.resource.data.title.size() > 0 &&
                     request.resource.data.description.size() > 0;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Carts collection
    match /carts/{userId} {
      // Users can only read and write their own cart
      allow read, write: if isOwner(userId);
    }

    // Volunteers collection (volunteer applications)
    match /volunteers/{applicationId} {
      // Users can read their own applications
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      // Admins can read all applications (both get and list operations)
      allow read: if isAdmin();
      // Users can create their own applications
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.keys().hasAll(['userId', 'name', 'email', 'availability', 'skills', 'experience', 'motivation', 'status']) &&
                     request.resource.data.userId is string &&
                     request.resource.data.name is string &&
                     request.resource.data.email is string &&
                     request.resource.data.availability is string &&
                     request.resource.data.skills is list &&
                     request.resource.data.experience is string &&
                     request.resource.data.motivation is string &&
                     request.resource.data.status is string &&
                     request.resource.data.name.size() > 0 &&
                     request.resource.data.email.size() > 0 &&
                     request.resource.data.availability.size() > 0 &&
                     request.resource.data.experience.size() > 0 &&
                     request.resource.data.motivation.size() > 0;
      // Admins can update status and review fields
      allow update: if isAdmin() &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'notes', 'reviewedBy', 'reviewedAt', 'updatedAt']);
    }

    // Petitions collection
    match /petitions/{petitionId} {
      // Everyone can read petitions (public listing page filters by published/active)
      allow read: if true;
      // Only admins can create, update, or delete petitions
      allow create: if isAdmin() &&
                     request.resource.data.keys().hasAll(['title', 'description', 'goal', 'isActive', 'isPublished', 'createdBy', 'currentSignatures', 'signatures']) &&
                     request.resource.data.title is string &&
                     request.resource.data.description is string &&
                     request.resource.data.goal is number &&
                     request.resource.data.isActive is bool &&
                     request.resource.data.isPublished is bool &&
                     request.resource.data.createdBy is string &&
                     request.resource.data.currentSignatures is number &&
                     request.resource.data.signatures is list &&
                     request.resource.data.title.size() > 0 &&
                     request.resource.data.description.size() > 0 &&
                     request.resource.data.goal > 0 &&
                     request.resource.data.currentSignatures == 0;
      allow update: if isAdmin();
      allow delete: if isAdmin();
      // Anyone can sign petitions (update signatures array and currentSignatures)
      allow update: if resource.data.isPublished == true &&
                     resource.data.isActive == true &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['signatures', 'currentSignatures', 'updatedAt']) &&
                     request.resource.data.currentSignatures > resource.data.currentSignatures &&
                     request.resource.data.signatures.size() > resource.data.signatures.size();
    }

    // Banners collection
    match /banners/{bannerId} {
      // Everyone can read active banners (for the hero section)
      allow read: if resource.data.isActive == true;
      // Admins can read all banners (active and inactive)
      allow read: if isAdmin();
      // Only admins can create, update, or delete banners
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Gallery Categories collection
    match /galleryCategories/{catId} {
      // Everyone can read active categories
      allow read: if resource.data.isActive == true;
      // Admins can read all categories
      allow read: if isAdmin();
      // Only admins can create, update, or delete categories
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Gallery Images collection
    match /galleryImages/{imgId} {
      // Everyone can read published images
      allow read: if resource.data.isPublished == true;
      // Admins can read all images
      allow read: if isAdmin();
      // Only admins can create, update, or delete images
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Surveys collection
    match /surveys/{surveyId} {
      // Everyone can read active and closed surveys (not drafts)
      allow read: if resource.data.status in ['active', 'closed'];
      // Admins can read all surveys (any status including drafts)
      allow read: if isAdmin();
      // Only admins can create, update, or delete surveys
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
      // Allow anyone to increment responseCount (for survey submissions)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['responseCount', 'updatedAt']) &&
                     request.resource.data.responseCount == resource.data.responseCount + 1;
    }

    // Survey Responses collection
    match /surveyResponses/{responseId} {
      // Authenticated users can create responses
      allow create: if isAuthenticated();
      // Public surveys allow unauthenticated responses with valid data
      allow create: if request.resource.data.keys().hasAll(['surveyId', 'answers', 'isAnonymous']) &&
                     request.resource.data.surveyId is string &&
                     request.resource.data.answers is list &&
                     request.resource.data.isAnonymous is bool;
      // Users can read their own responses
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Admins can read all responses
      allow read: if isAdmin();
    }

    // Membership Applications collection
    match /membershipApplications/{appId} {
      // Only authenticated users can submit a membership application
      allow create: if isAuthenticated();
      // Users can read their own applications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Admins can read all applications
      allow read: if isAdmin();
      // Admins can update and delete applications
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notifId} {
      // Any authenticated user can create notifications (triggered from client-side forms)
      allow create: if isAuthenticated() ||
                     (request.resource.data.keys().hasAll(['type', 'title', 'message', 'link', 'read']) &&
                      request.resource.data.type is string &&
                      request.resource.data.title is string &&
                      request.resource.data.message is string &&
                      request.resource.data.link is string &&
                      request.resource.data.read is bool);
      // Admins can read all notifications
      allow read: if isAdmin();
      // Authenticated users can read broadcast notifications (audience == 'all')
      allow read: if isAuthenticated() && resource.data.audience == 'all';
      // Authenticated users can read notifications targeted to them
      allow read: if isAuthenticated() && resource.data.audience == 'user' && resource.data.userId == request.auth.uid;
      // Admins can update any notification (mark as read, etc.)
      allow update: if isAdmin();
      // Authenticated users can update readBy on their own notifications or broadcast ones
      allow update: if isAuthenticated() &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy']) &&
                     (resource.data.audience == 'all' || (resource.data.audience == 'user' && resource.data.userId == request.auth.uid));
    }

    // Emails collection (email logs)
    match /emails/{emailId} {
      // The API route creates email logs (server-side, runs as authenticated or with admin SDK)
      // Allow any authenticated user to create (the API route calls this after sending)
      allow create: if true;
      // Only admins can read email logs
      allow read: if isAdmin();
    }

    // Leaders collection (leadership team)
    match /leaders/{leaderId} {
      // Everyone can read leaders (public leadership page)
      allow read: if true;
      // Only admins can create, update, or delete leaders
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Referrals collection
    match /referrals/{referralId} {
      // Users can read referrals where they are the referrer
      allow read: if isAuthenticated() && resource.data.referrerUserId == request.auth.uid;
      // Users can read referrals where they are the referred user
      allow read: if isAuthenticated() && resource.data.referredUserId == request.auth.uid;
      // Admins can read all referrals
      allow read: if isAdmin();
      // Authenticated users can create referrals (created during signup flow)
      allow create: if isAuthenticated();
      // Authenticated users can update referrals they are involved in (status progression)
      allow update: if isAuthenticated() &&
                     (resource.data.referrerUserId == request.auth.uid || resource.data.referredUserId == request.auth.uid) &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
      // Admins can update any referral
      allow update: if isAdmin();
    }

    // Newsletter subscriptions collection
    match /newsletterSubscriptions/{subscriptionId} {
      // Anyone can create newsletter subscriptions (authenticated or not)
      // Validate that email exists and is a non-empty string
      allow create: if request.resource.data.keys().hasAll(['email', 'subscribed']) &&
                     request.resource.data.email is string &&
                     request.resource.data.email.size() > 0 &&
                     request.resource.data.email.matches('.*@.*') &&
                     request.resource.data.subscribed is bool &&
                     request.resource.data.subscribed == true;
      // Anyone can update subscriptions (for resubscribing or updating userId)
      // This allows the function to update existing subscriptions when email already exists
      allow update: if request.resource.data.keys().hasAll(['email', 'subscribed']) &&
                     request.resource.data.email is string &&
                     request.resource.data.email.size() > 0 &&
                     request.resource.data.subscribed is bool;
      // Users can read their own subscriptions
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || resource.data.email == request.auth.token.email);
      // Admins can read all subscriptions
      allow read: if isAdmin();
    }
  }
}
